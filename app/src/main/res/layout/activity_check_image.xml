<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.order.CheckImageActivity"
        android:background="@color/black">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/check_image_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <LinearLayout
            android:layout_alignBottom="@id/check_image_vp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/check_image_point_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/select_check_image_point"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/check_image_point_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/select_check_image_point"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/check_image_point_3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/select_check_image_point"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/check_image_point_4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/select_check_image_point"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/check_image_point_5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/select_check_image_point"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/check_image_point_6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/select_check_image_point"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/check_image_point_7"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/select_check_image_point"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/check_image_point_8"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/select_check_image_point"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/check_image_point_9"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/select_check_image_point"
                android:visibility="gone"/>
        </LinearLayout>

    </RelativeLayout>
</layout>