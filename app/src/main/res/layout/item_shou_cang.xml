<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:elevation="1dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_shou_cang_cover"
            android:layout_width="75dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/leishen" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/item_shou_cang_cover"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_shou_cang_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="练习" />

            <TextView
                android:id="@+id/item_shou_cang_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:text="只作用于练习"
                android:textSize="12sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/item_shou_cang_is_shoucang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_moyu_theme"
            android:padding="5dp"
            android:text="收藏"
            android:textColor="@color/mainColor"
            android:textSize="12sp"
            android:visibility="gone" />
    </RelativeLayout>
</layout>